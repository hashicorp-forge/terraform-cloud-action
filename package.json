{
  "name": "terraform-cloud-action",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:run": "ncc build -o dist/apply --license licenses.txt src/apply.ts",
    "build:output": "ncc build -o dist/outputs --license licenses.txt src/outputs.ts",
    "build:destroy": "ncc build -o dist/destroy --license licenses.txt src/destroy.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "axios": "^1.5.1",
    "axios-retry": "^3.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@vercel/ncc": "^0.38.0",
    "axios-mock-adapter": "^1.22.0",
    "husky": "^8.0.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "license": "MPL-2.0"
}
