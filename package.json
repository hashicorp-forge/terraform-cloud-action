{
  "name": "typescript-action",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:main": "ncc build -o dist --license licenses.txt src/main.ts",
    "build:run": "ncc build -o dist/run --license licenses.txt src/run.ts",
    "build:output": "ncc build -o dist/output --license licenses.txt src/output.ts",
    "build:destroy": "ncc build -o dist/destroy --license licenses.txt src/destroy.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "axios": "^1.3.4",
    "axios-retry": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@vercel/ncc": "^0.34.0",
    "axios-mock-adapter": "^1.21.2",
    "husky": "^8.0.2",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "license": "MPL-2.0"
}
